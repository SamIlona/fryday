{% macro getForm(form, page) %}

{% import 'macros/element.twig' as elementMacros %}

<div class="box">
	<div class="box-content">

		{# Add News Form  #}
		{% if page == 'add-news' %}
			<form method="{{ form.attributes.method }}" class="form-horizontal" role="form" action="{{ url('admin/default', {'controller':'content', 'action':'add-news'}) }}" >
				<div class="form-group">
					<label class="col-sm-2 control-label">{{ elementMacros.getLabelOfElement(form, 'title') }}</label>
					<div class="col-sm-10">{{ elementMacros.getElement(form, 'title') }}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">{{ elementMacros.getLabelOfElement(form, 'picture') }}</label>
					<div class="col-sm-5">{{ elementMacros.getElement(form, 'picture') }}</div>
					<div class="col-sm-5"><img id="img-prev-news" src="#" alt="Selected image" /></div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label" for="form-styles">{{ elementMacros.getLabelOfElement(form, 'text') }}</label>
					<div class="col-sm-10">{{ elementMacros.getElement(form, 'text') }}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label" for="form-styles">{{ elementMacros.getLabelOfElement(form, 'submit') }}</label>
					<div class="col-sm-10">{{ elementMacros.getElement(form, 'submit') }}</div>
				</div>
			</form>

		{# Create New Place From #}
		{% elseif page == 'create-new-place' %}
			<h4 class="page-header">Create a new place</h4>
			<form method="{{ form.attributes.method }}" class="form-horizontal" role="form" action="{{ url('admin/default', {'controller':'content', 'action':'add-place'}) }}" >
				<div class="form-group">
					<label class="col-sm-2 control-label">{{ elementMacros.getLabelOfElement(form, 'country') }}</label>
					<div class="col-sm-4">{{ elementMacros.getElement(form, 'country') }}</div>
					<label class="col-sm-2 control-label">{{ elementMacros.getLabelOfElement(form, 'city') }}</label>
					<div class="col-sm-4">{{ elementMacros.getElement(form, 'city') }}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label" for="form-styles">{{ elementMacros.getLabelOfElement(form, 'submit') }}</label>
					<div class="col-sm-10">{{ elementMacros.getElement(form, 'submit') }}</div>
				</div>
			</form>

		{% endif %}
	</div>
</div>
	
{% endmacro %}