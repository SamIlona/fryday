    <script>

    function readURL(input) 
    {
        if (input.files && input.files[0]) 
        {
            var reader = new FileReader();

            reader.onload = function (e) 
            {
                $('#imagepreview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $(document).ready(function () {
        $('#imagepreview').imgAreaSelect({ 
            // maxWidth: 200, 
            // maxHeight: 150, 
            aspectRatio: '1:1',
            handles: true,
            // show: true,
            onSelectChange: preview,
        });
    });

    $("#create-user-image").change(function(){
        readURL(this);
    });

    function preview(img, selection) {  
        $('#user-cw').val(img.clientWidth);  
        $('#user-ch').val(img.clientHeight);  
        $('#user-x').val(selection.x1);  
        $('#user-y').val(selection.y1); 
        $('#user-w').val(selection.width);  
        $('#user-h').val(selection.height);
    }
    </script>