{% import 'macros/element.twig' as elementMacros %}
{# {% import 'macros/form.twig' as formMacros %} #}

<div id="dashboard-header" class="row">
	<div class="col-xs-12 col-sm-10">
		<h3>ADD NEWS</h3>
	</div>
</div>
<div class="row">
	<div class="col-xs-12 col-sm-12">
        <div class="box-content">
            <form method="post" class="form-horizontal" role="form" action="{{ url('admin/default', {'controller':'content', 'action':'add-news'}) }}" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ elementMacros.getLabelOfElement(form, 'title') }}</label>
                    <div class="col-sm-4">{{ elementMacros.getElement(form, 'title') }}</div>
                    <label class="col-sm-2 control-label">{{ elementMacros.getLabelOfElement(form, 'place') }}</label>
                    <div class="col-sm-4">{{ elementMacros.getElement(form, 'place') }}</div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ elementMacros.getLabelOfElement(form, 'picture-selection-for-news') }}</label>
                    <div class="col-sm-5">{{ elementMacros.getElement(form, 'picture-selection-for-news') }}</div>
                    <div class="col-sm-5"><img id="img-prev-news" src="#" alt="Selected image" /></div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="form-styles">{{ elementMacros.getLabelOfElement(form, 'text') }}</label>
                    <div class="col-sm-10">{{ elementMacros.getElement(form, 'text') }}</div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="form-styles">{{ elementMacros.getLabelOfElement(form, 'submit') }}</label>
                    <div class="col-sm-10">{{ elementMacros.getElement(form, 'submit') }}</div>
                </div>
            </form>
        </div>
	</div>
</div>

// <script type="text/javascript">
function readURL(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();
            
        reader.onload = function (e) {
            $('#img-prev-news').attr('src', e.target.result);
        }
            
        reader.readAsDataURL(input.files[0]);
    }
}
    
$("#picture-selection-for-news").change(function(){
    readURL(this);
});
</script>